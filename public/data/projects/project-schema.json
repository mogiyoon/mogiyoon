{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Data Schema",
  "description": "Defines the complete structure for a project data file.",
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "Unique identifier for the project." },
    "title": { "type": "string", "description": "The main title of the project." },
    "subtitle": { "type": "string", "description": "A brief subtitle for the project." },
    "demoGifSrc": { "type": "string", "description": "Path to the demo GIF file." },
    "description": { "type": "string", "description": "A detailed description of the project." },
    "overview": {
      "type": "object",
      "properties": {
        "projectType": { "type": "string", "description": "e.g., Personal Project (App)" },
        "period": { "type": "string", "description": "The development period." },
        "introduction": { "type": "string", "description": "An introduction to the project." },
        "features": { "type": "string", "description": "Key features of the project." },
        "techStack": { "type": "array", "items": { "type": "string" } },
        "github": { "type": "string", "format": "uri" }
      },
      "required": ["projectType", "period", "introduction", "features", "techStack"]
    },
    "summaries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "parts": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": { "type": "string", "enum": ["subtitle", "image", "text", "link"] },
                  "id": { "type": "string" },
                  "content": { "type": "string" },
                  "src": { "type": "string" },
                  "alt": { "type": "string" },
                  "caption": { "type": "string" },
                  "label": { "type": "string" },
                  "href": { "type": "string", "format": "uri" }
                },
                "required": ["type"]
              }
            }
          }
        },
        "required": ["id", "title", "parts"]
      }
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "icon": { "type": "string" }
        },
        "required": ["name", "description", "icon"]
      }
    },
    "screenshots": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "src": { "type": "string" }
        },
        "required": ["title", "src"]
      }
    },
    "developmentProcess": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "content": { "type": "string" }
        },
        "required": ["title", "content"]
      }
    },
    "license": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" }
      },
      "required": ["name", "url"]
    }
  },
  "required": [
    "id",
    "title",
    "subtitle",
    "demoGifSrc",
    "description",
    "overview",
    "summaries",
    "features",
    "screenshots",
    "developmentProcess",
    "license"
  ]
}